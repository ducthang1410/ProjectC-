
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Theme/Login.css" />
    <link rel="stylesheet" href="~/Theme/GridFlex.css" />
</head>
<body>
    <div class="container">
        <div class="col-4">
            <form class="form-login" action="~/Home/CheckLogin" method="post">
                <h1>Sign in</h1>
                <div class="col-12">
                    <input type="text" placeholder="Username" />
                </div>
                <div class="col-12">
                    <input type="password" placeholder="Password" />
                </div>
                <div class="clear"></div>
                <div class="col-12">
                    <input class="btn-login" type="submit" value="Sign in" />
                </div>
                <div class="col-12 border"></div>
                <div class="col-12">
                    
                    <p class="txt-right txt-gray">
                        <a class="txt-link" href="@Url.Action("Register", "Index", "Register")">
                            Register
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
