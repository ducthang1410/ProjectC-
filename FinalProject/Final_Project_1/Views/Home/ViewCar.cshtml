
@{
    Layout = null;
}
@model Final_Project_1.Models.Car

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="@Url.Content("~/CSS/Grid.css")" />
    <link rel="stylesheet" href="@Url.Content("~/CSS/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/CSS/font-awesome.min.css")" />
    <title>ViewCar</title>
</head>
<body>
    @Html.Partial("MenuLogin")

    <div class="container mg-top-30">
        <div class="col-12">
            <h2 class="title">New Cars</h2>
        </div>

        <div class="h-product">
            <div class="col-4 ">
                <div class="bg-product">
                    <img src="~/images/n-car_1.png" class="p-img" />
                    <div class="p-title">
                        <form action="~/Home/ProductInfo" method="post">
                            <input type="text" value="C01" name="ID" readonly />HONDA ANCORD
                            <div class="price">$48.000</div>
                            <input type="submit" value="View" />
                        </form>
                    </div>

                </div>
            </div>
            <div class="col-4 ">
                <div class="bg-product">
                    <img src="~/images/n-car_2.jpg" class="p-img" />
                    <div class="p-title">
                        <form action="~/Home/ProductInfo" method="post">
                            <input type="text" value="C02" name="ID" readonly />Ford Escape
                            <div class="price">$57.346</div>
                            <input type="submit" value="View" />
                        </form>
                    </div>

                </div>
            </div>
            <div class="col-4 ">
                <div class="bg-product">
                    <img src="~/images/n-car_3.jpg" class="p-img" />
                    <div class="p-title">
                        <form action="~/Home/ProductInfo" method="post">
                            <input type="text" value="C03" name="ID" readonly />TOYOTA Vios
                            <div class="price">$25.346</div>
                            <input type="submit" value="View" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <hr class="mg-top-30" />
    <div class="container mg-top-30">
        <div class="col-12 title">Cars</div>


        <div class="col-4 ">
            <div class="bg-product">
                <img src="~/images/car1.jpg" class="p-img" />
                <div class="p-title">
                    <form action="~/Home/ProductInfo" method="post">
                        <input type="text" value="C04" name="ID" readonly />Lamborghini Sian
                        <div class="price">$600.000</div>
                        <input type="submit" value="View" />
                    </form>
                </div>

            </div>
        </div>
        <div class="col-4 ">
            <div class="bg-product">
                <img src="~/images/CAR3.JPG" class="p-img" />
                <div class="p-title">
                    <form action="~/Home/ProductInfo" method="post">
                        <input type="text" value="C06" name="ID" readonly />HONGQI E-JING GT
                        <div class="price">$111.000</div>
                        <input type="submit" value="View" />
                    </form>
                </div>

            </div>
        </div>
        <div class="col-4 ">
            <div class="bg-product">
                <img src="~/images/CAR2.jpg" class="p-img" />
                <div class="p-title">
                    <form action="~/Home/ProductInfo" method="post">
                        <input type="text" value="C05" name="ID" readonly />Honda Accord AX
                        <div class="price">$57.400</div>
                        <input type="submit" value="View" />
                    </form>
                </div>

            </div>
        </div>

        <div class="col-4 ">
            <div class="bg-product">
                <img src="~/images/CAR4.jpg" class="p-img" />
                <div class="p-title">
                    <form action="~/Home/ProductInfo" method="post">
                        <input type="text" value="C07" name="ID" readonly />Honda Everus VE-1
                        <div class="price">$170.800</div>
                        <input type="submit" value="View" />
                    </form>
                </div>

            </div>
        </div>
        <div class="col-4 ">
            <div class="bg-product">
                <img src="~/images/CAR5.jpg" class="p-img" />
                <div class="p-title">
                    <form action="~/Home/ProductInfo" method="post">
                        <input type="text" value="C08" name="ID" readonly />Lamborghini S Roadster
                        <div class="price">$467.442</div>
                        <input type="submit" value="View" />
                    </form>
                </div>

            </div>
        </div>
        <div class="col-4 ">
            <div class="bg-product">
                <img src="~/images/CAR9.jpg" class="p-img" />
                <div class="p-title">
                    <form action="~/Home/ProductInfo" method="post">
                        <input type="text" value="C09" name="ID" readonly />Ferrari Portofino
                        <div class="price">$215.000</div>
                        <input type="submit" value="View" />
                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="clear"></div>
    @Html.Partial("Footer")
</body>
</html>
